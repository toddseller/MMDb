<div class="col-lg-2 col-md-3 col-sm-4 col-xs-6 index-preview text-center">
  <a data-toggle="modal" data-target=<%= "#movie#{movie.id}" %>><img src=<%= "#{movie.poster}" %> alt=<%= "#{movie.title} Poster" %>></a>
  <p class="sort-name"><%= movie.sort_name %></p>
  <p class="truncate"><%= movie.title %></p>
</div>
<div class="modal fade" id=<%= "movie#{movie.id}" %> tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h2 class="modal-title"><%= movie.title %></h2>
        <p><span id="description-year"><%= movie.year %></span><span id="description-rating"><%= movie.rating %></span></p>
      </div>
      <div class="modal-body">
        <%= erb :'/partials/_description', locals: {movie: movie}, layout: false %>
      </div>
    </div>
  </div>
</div>
