<div class="col-lg-2 index-preview text-center">
  <a data-toggle="modal" data-target=<%= "#movie#{movie.id}" %>><img src=<%= "#{movie.poster}" %> alt=<%= "#{movie.title} Poster" %>></a>
  <p class="sort-name"><%= movie.sort_name %></p>
  <p class="truncate"><%= movie.title %></p>
</div>
<div class="modal fade" id=<%= "movie#{movie.id}" %> tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header description">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <%= erb :'/partials/_description', locals: {movie: movie}, layout: false %>
      </div>
    </div>
  </div>
</div>
