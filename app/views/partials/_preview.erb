  <form id="create-movie" action=<%="/users/#{@user.id}/movies"%> method="POST">
    <input type="hidden" name="movie[title]" value="">
    <input type="hidden" name="movie[year]" value="">
    <input type="hidden" name="movie[rating]" value="">
    <textarea type="hidden" name="movie[plot]" value=""></textarea>
    <textarea type="hidden" name="movie[actors]" value=""></textarea>
    <input type="hidden" name="movie[director]" value="">
    <input type="hidden" name="movie[writer]" value="">
    <input type="hidden" name="movie[producer]" value="">
