        <p class="description-plot"><%= movie.plot %></p>
        <h4>Cast and Crew</h4>
        <hr/>
        <div class="col-lg-3 studio-margin">
          <h5>STARRING</h5>
          <ul>
            <% movie.actors.split(/(?<!,),(?!\sJr\.)/).each do |line| %>
              <li><a href=""><%= line %></a></li>
            <% end %>
          </ul>
        </div>
        <div class="col-lg-3 col-lg-offset-1 studio-margin">
          <% if !movie.director.empty? %>
            <% if movie.director.split(/(?<!,),(?!\sJr\.)/).length > 1 %>
              <h5>DIRECTORS</h5>
            <% else %>
              <h5>DIRECTOR</h5>
            <% end %>
            <ul>
            <% movie.director.split(/(?<!,),(?!\sJr\.)/).each do |line| %>
              <li><a href=""><%= line %></a></li>
            <% end %>
          </ul>
          <% end %>
          <% if !movie.writer.empty? %>
            <% if movie.writer.split(/(?<!,),(?!\sJr\.)/).length > 1 %>
              <h5>SCREENWRITERS</h5>
            <% else %>
              <h5>SCREENWRITER</h5>
            <% end %>
            <ul>
            <% movie.writer.split(/(?<!,),(?!\sJr\.)/).each do |line| %>
              <li><a href=""><%= line %></a></li>
            <% end %>
          </ul>
          <% end %>
        </div>
        <div class="col-lg-3 col-lg-offset-1 studio-margin">
          <% if !movie.producer.empty? %>
            <% if movie.producer.split(/(?<!,),(?!\sJr\.)/).length > 1 %>
              <h5>PRODUCERS</h5>
            <% else %>
              <h5>PRODUCER</h5>
            <% end %>
            <ul>
            <% movie.producer.split(/(?<!,),(?!\sJr\.)/).each do |line| %>
              <li><a href=""><%= line %></a></li>
            <% end %>
          </ul>
          <% end %>
          <% if movie.writer.empty? || movie.producer.empty? %>
            <p class="filler"></p>
          <% end %>
        </div>
      <% if !movie.studio.empty? %>
        <div class="col-lg-12 studio">
          <h5>STUDIO</h5>
          <hr/>
