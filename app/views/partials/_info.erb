<div id="meta-data">
  <div class="modal-header">
    <% if user %>
      <a class="movie-edit" href=<%= "/users/#{user.id}/movies/#{movie.id}/edit" %>><span class="glyphicon glyphicon-option-horizontal"></span></a>
    <% end %>
  </div>
  <div class="modal-body">
    <div id="info-body" class="row">
      <div class="col-lg-4 description-poster">
        <img src=<%= "#{movie.poster}" %> alt=<%= "#{movie.title} Poster" %>>
      </div>
      <div class="col-lg-8 description-details">
        <h2 class="modal-title"><%= movie.title %></h2>
        <div class="description-info">
          <span class="spacing"><%= movie.runtime %></span>
          <span class="spacing"><%= movie.year %></span>
          <span class="spacing"><%= movie.genre %></span>
          <span class="spacing" id="description-rating"><%= movie.rating %></span>
          <% if movie.hd %>
            <span class="spacing" id="description-hd">HD</span>
          <% end %>
          <div id="ratings-container">
            <% if current_user %>
              <%= erb :'partials/_ratings_form', locals: {movie: movie} %>
            <% else %>
              <%= erb :'partials/_ratings', locals: {movie: movie} %>
            <% end %>
          </div>
        </div>
        <p class="description-plot"><%= movie.plot %></p>
        <h4>Cast and Crew</h4>
        <hr/>
        <div class="col-lg-3">
          <h5>STARRING</h5>
          <ul>
            <% movie.actors.split(", ").each do |line| %>
              <li><%= line %></li>
            <% end %>
          </ul>
        </div>
        <div class="col-lg-3 col-lg-offset-1">
          <% if !movie.director.empty? %>
            <% if movie.director.split(',').length > 1 %>
              <h5>DIRECTORS</h5>
            <% else %>
              <h5>DIRECTOR</h5>
            <% end %>
            <ul>
            <% movie.director.split(", ").each do |line| %>
              <li><%= line %></li>
            <% end %>
          </ul>
          <% end %>
          <% if !movie.writer.empty? %>
            <% if movie.writer.split(',').length > 1 %>
              <h5>SCREENWRITERS</h5>
            <% else %>
              <h5>SCREENWRITER</h5>
            <% end %>
            <ul>
            <% movie.writer.split(", ").each do |line| %>
              <li><%= line %></li>
            <% end %>
          </ul>
          <% end %>
        </div>
        <div class="col-lg-3 col-lg-offset-1">
          <% if !movie.producer.empty? %>
            <% if movie.producer.split(',').length > 1 %>
              <h5>PRODUCERS</h5>
            <% else %>
              <h5>PRODUCER</h5>
            <% end %>
            <ul>
            <% movie.producer.split(", ").each do |line| %>
              <li><%= line %></li>
            <% end %>
          </ul>
          <% end %>
          <% if movie.writer.empty? || movie.producer.empty? %>
            <p class="filler"></p>
          <% end %>
        </div>
      </div>
      <% if !movie.studio.empty? %>
        <div class="studio">
          <h5>STUDIO</h5>
          <hr/>
          <p><%= movie.studio %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
