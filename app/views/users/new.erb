<div class="container registration">
  <div class="row">
    <div class="col-sm-12">
      <h1 class="text-center">Sign Up Now!</h1>
      <p class="text-center">Please fill in the following information.</p>
      
      <form class="login-form" action="/users" method="post">
        <p class="errors">
          <% if params[:errors] != nil %>
            Oops! <%=params[:errors] %>
          <% end %>
        </p>
        <div class="form-group">
          <label for="first_name">First Name:</label>
          <input class="form-control" type="text" name="first_name" placeholder="John">
        </div>
        <div class="form-group">
          <label for="last_name">Last Name:</label>
          <input class="form-control" type="text" name="last_name" placeholder="Doe">
        </div>
        <div class="form-group">
          <label for="user_name">User name:</label>
          <input class="form-control" type="text" name="user_name" placeholder="jonnyD">
        </div>
        <div class="form-group">
         <label for="password">Password:</label>
         <input class="form-control" type="password" name="password" placeholder="Password">
       </div>
       <div class="form-group">
         <label for="email">Email:</label>
         <input class="form-control" type="email" name="email" placeholder="john.doe@example.com">
       </div>
       <input type="submit" class="btn btn-default login-button center-block" value="Register">
     </form>
   </div>
 </div>
</div>