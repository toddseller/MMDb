<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="col-sm-9">
        <img id="main-logo" src="http://mmdb.online/imgs/logo.svg" alt="MMDb logo">
        <h3>Most Popular Movies</h3>
        <% @movies.user_count.each do |movie| %>
          <%= erb :'/partials/_top_movies', locals: { movie: movie }, layout: false %>
        <% end %>
        <h3>Recently Added Movies</h3>
        <% @movies.recently_added[0, 6].each do |movie| %>
          <%= erb :'/partials/_top_movies', locals: { movie: movie }, layout: false %>
        <% end %>
      </div>
      <div class="col-sm-3">
        <% @users.each do |user| %>
          <%= erb :'/partials/_users', locals: { user: user }, layout: false %>
        <% end %>
      </div>
    </div>
  </div><!-- end row -->
</div>